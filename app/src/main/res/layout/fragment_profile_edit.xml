<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileEditFragment"
    >


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEditBio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:text="Submit" />

    <EditText
        android:id="@+id/etEditBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivTempPicture"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="75dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Write a Bio..." />

    <ImageView
        android:id="@+id/ivTempPicture"
        android:layout_width="159dp"
        android:layout_height="162dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnGetImage"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivTempPicture"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-112dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/ivTempPicture"
        android:backgroundTint="#989898"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconTint="#000000" />


</RelativeLayout>